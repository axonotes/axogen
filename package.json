{
    "name": "axogen",
    "version": "0.1.0",
    "description": "TypeScript-native configuration and task management",
    "module": "src/index.ts",
    "main": "dist/index.js",
    "type": "module",
    "bin": {
        "axogen": "./bin/axogen"
    },
    "files": [
        "bin",
        "dist"
    ],
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "scripts": {
        "build": "bun run build.ts",
        "test:local": "bun run build && ./bin/axogen --version",
        "dev": "bun --watch src/cli.ts",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "3.6.2"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
