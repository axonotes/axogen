{
    "name": "@axonotes/axogen",
    "version": "0.2.2",
    "description": "TypeScript-native configuration system that unifies typed environment variables, code generation, and task management for any project",
    "type": "module",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "axogen": "./bin/axogen"
    },
    "files": [
        "bin",
        "dist"
    ],
    "scripts": {
        "build": "bun run build.ts",
        "preview": "bun run format && bun run build && bun link",
        "test:local": "bun run build && ./bin/axogen --version",
        "format": "prettier --write .",
        "prepare": "husky"
    },
    "homepage": "https://axonotes.github.io/axogen/",
    "repository": {
        "type": "git",
        "url": "https://github.com/axonotes/axogen.git"
    },
    "bugs": {
        "url": "https://github.com/axonotes/axogen/issues"
    },
    "funding": {
        "type": "github",
        "url": "https://github.com/sponsors/imgajeed76"
    },
    "keywords": [
        "typescript",
        "configuration",
        "environment-variables",
        "config-management",
        "task-management",
        "cli",
        "dotenv",
        "yaml",
        "json",
        "toml",
        "template",
        "monorepo",
        "docker",
        "kubernetes",
        "type-safety",
        "zod",
        "code-generation"
    ],
    "author": {
        "name": "Oliver Seifert",
        "url": "https://github.com/imgajeed76"
    },
    "license": "MIT",
    "dependencies": {
        "@iarna/toml": "^2.2.5",
        "@types/js-yaml": "^4.0.9",
        "commander": "^14.0.0",
        "dotenv": "^17.2.0",
        "handlebars": "^4.7.8",
        "jiti": "^2.4.2",
        "js-yaml": "^4.1.0",
        "mustache": "^4.2.0",
        "nunjucks": "^3.2.4",
        "tsx": "^4.20.3",
        "zod": "^4.0.5"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/mustache": "^4.2.6",
        "@types/nunjucks": "^3.2.6",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "prettier": "3.6.2",
        "tsup": "^8.5.0",
        "typescript": "^5.8.3"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "engines": {
        "node": ">=18",
        "bun": ">=1.2"
    }
}
